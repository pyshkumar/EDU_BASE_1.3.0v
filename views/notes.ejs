<%- include("partials/header.ejs") %>
<div class="container">
    <div class="row justify-content-between">
        <div class="col-8">
            <h1>NOTES</h1>
        </div>
        <div class="col-4">
            <a role="button" href="/newnote" class="btn btn-primary ml-auto">New Note</a>
        </div>
    </div>


    <% notes.forEach(function(note) { %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><%= note.title %></h4>
                        <p class="card-text"><%= note.description %></p>
                        <a href="<%= note.fileUrl %>" class="btn btn-primary" target="_blank">Download</a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>


<%- include("partials/footer.ejs") %>
