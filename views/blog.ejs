<body>
<div class="container">

    <h1>BLOGS</h1>
    <% post.forEach(function(p) { %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="font-size: 1.8em"><%= p.title %></h4>
                        <p class="card-text"><%= p.content %></p>
                        <p>Date:<%= p.doc %></p>
                        <p>Created by: <%= p.username %></p>
                        <!-- <a href="/posts/<%= p.title %>">READ MORE</a> -->
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>
