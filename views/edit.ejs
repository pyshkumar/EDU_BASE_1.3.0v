  <body>
    <div class="container">
<div class="container mt-5">
  <h1>Enter Credentails</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/edit" method="POST">
            <div class="form-group">
              <label for="name">First name</label>
              <input type="name" class="form-control" name="fname" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="name">Last name </label>
              <input type="name" class="form-control" name="lname" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" class="form-control" name="email" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="address">Address</label>
              <input type="address" class="form-control" name="address"autocomplete="off" >
            </div>
            <div class="form-group">
              <label for="number">Phone Number</label>
              <input type="integer" class="form-control" name="phone_nr"autocomplete="off"value="+91 " >
            </div>
            <div class="form-group">
              <label for="Occupation">Occupation</label>
              <input type="occupation" class="form-control" name="occupation"autocomplete="off" list="occupation">
              <datalist id="occupation">
             <option value="Mentor">
             <option value="Student">
             <option value="Software Engineer">
             <option value="Developer">
            </datalist>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>

        </div>
      </div>
    </div>


